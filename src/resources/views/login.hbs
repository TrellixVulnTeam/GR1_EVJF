<div class="container">
    
    {{#if alertlogin }}
    <div class="alert alert-warning alert-dismissible fade show" style="margin-top: 100px;" role="alert">
  <strong>Bạn chưa đăng nhập !</strong> Vui lòng đăng nhập để thực hiện chức năng này.
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
    {{/if}}
    {{#if alertCheck }}
    <div class="alert alert-warning alert-dismissible fade show" style="margin-top: 100px;" role="alert">
  <strong>Sai tên đăng nhập hoặc mật khẩu!</strong> Mời đăng nhập lại.
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
    {{/if}}
<form action="/user/login" method="POST" class="col-6" style = "margin-top: 100px; margin-bottom: 200px;">
    <div class="form-group mb-3">
        <label for="un">Username</label>
        <input type="text" class="form-control bg-info" name="username" id="un">
    </div>
    <div class="form-group mb-3">
        <label for="pass">Mật khẩu</label>
        <input type="password" class="form-control bg-primary" name="password" id="pass">
    </div>
    <div class="form-group mt-3 ">       
        <button type="submit" class="btn btn-danger px-4  py-2 text-white"> ĐĂNG NHẬP</button>
    </div>
</form>    
</div>